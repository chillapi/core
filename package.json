{
  "name": "@chillapi/core",
  "version": "1.0.31",
  "description": "ChillAPI development platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist/*",
    "lint": "eslint -c .eslintrc.yml",
    "tsc": "tsc",
    "build:watch": "tsc -w",
    "dev:start": "nodemon --watch dist --exec node .",
    "dev": "concurrently \"npm run build:watch\" \"npm run dev:start\"",
    "start": "node .",
    "test": "jest",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chillapi/core.git"
  },
  "keywords": [
    "low-code",
    "sql",
    "openapi"
  ],
  "bin": {
    "chillapi": "bin/start"
  },
  "author": "Valentin Raduti",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chillapi/issues"
  },
  "homepage": "https://github.com/chillapi#readme",
  "dependencies": {
    "@chillapi/api": "1.0.38",
    "@chillapi/module-discovery": "1.0.6",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.20"
  },
  "peerDependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.19",
    "@types/js-yaml": "^3.12.5",
    "@types/lodash": "^4.14.159",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "concurrently": "^5.2.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.32.0",
    "eslint-config-google": "^0.14.0",
    "husky": "^6.0.0",
    "jest": "^27.0.5",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  }
}
